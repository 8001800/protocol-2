{
  "name": "@abacusprotocol/protocol",
  "version": "0.1.6",
  "description": "Abacus Protocol Contracts",
  "repository": "git@github.com:abacusprotocol/protocol.git",
  "author": "Abacus Team <team@abacusprotocol.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -fr build/",
    "compile": "truffle compile",
    "prepublish": "npm run compile && npm run export:rinkeby",
    "export:rinkeby": "truffle exec scripts/export_addresses.js --network rinkeby > build/rinkeby.json",
    "test": "npm run clean && truffle test",
    "lint": "solium -d contracts --fix"
  },
  "dependencies": {
    "transmute-framework": "^0.1.60",
    "zeppelin-solidity": "^1.8.0"
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "es6-promisify": "^6.0.0",
    "solium": "^1.1.5",
    "truffle": "^4.1.5",
    "web3": "^1.0.0-beta.30"
  },
  "files": [
    "build/*.json",
    "build/contracts/*.json"
  ]
}
